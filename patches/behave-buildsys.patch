-    use_2to3= bool(python_version >= 3.0),
+    scripts=['bin/behave'],
+    requires=requirements,
     license="BSD",
     classifiers=[
         "Development Status :: 4 - Beta",
@@ -97,7 +83,4 @@ setup(
         "Topic :: Software Development :: Testing",
         "License :: OSI Approved :: BSD License",
     ],
-    zip_safe = True,
 )
